<%- include("partials/navbar") %>
  <style>
   body {
  margin: 0;
  padding: 0;
  font-family: "Poppins", sans-serif;
  background: linear-gradient(135deg, #4e54c8, #8f94fb);
  min-height: 100vh;
}

.container {
  width: 90%;
  max-width: 900px;
  margin: 120px auto; /* Add space below navbar */
}


    h2 {
      text-align: center;
      margin-bottom: 20px;
      font-size: 32px;
      font-weight: 600;
    }

    .profile-pic {
      text-align: center;
      margin-bottom: 20px;
    }

    .profile-pic img {
      width: 140px;
      height: 140px;
      object-fit: cover;
      border-radius: 50%;
      border: 3px solid #fff;
    }

    .profile-pic input {
      margin-top: 10px;
    }

    .form-group {
      margin-bottom: 15px;
      width: 100%;
    }

    label {
      font-weight: 500;
      display: block;
      margin-bottom: 5px;
    }

    input, select, textarea {
      width: 100%;
      padding: 12px;
      border-radius: 10px;
      border: none;
      outline: none;
      font-size: 16px;
    }

    textarea {
      resize: none;
      height: 80px;
    }

    #aadhar-preview {
      margin-top: 10px;
      width: 100%;
      border-radius: 10px;
      display: none;
    }

    button {
      width: 100%;
      padding: 14px;
      font-size: 18px;
      border: none;
      background: #222;
      color: white;
      border-radius: 12px;
      cursor: pointer;
      margin-top: 20px;
      transition: 0.3s;
    }

    button:hover {
      background: #000;
      letter-spacing: 1px;
    }
  </style>
</head>
<body>

<div class="container">
  <h2>User Profile</h2>

  <!-- Profile Image Upload & Preview -->
  <div class="profile-pic">
    <img id="profileImage" src="https://via.placeholder.com/150" alt="Profile Picture">
    <input type="file" id="profileUpload" accept="image/*">
  </div>

  <!-- Form -->
  <form id="profileForm">

    <div class="form-group">
      <label>Name</label>
      <input type="text" id="name" placeholder="Your Full Name">
    </div>

    <div class="form-group">
      <label>Mobile Number</label>
      <input type="text" id="mobile" placeholder="Mobile Number">
    </div>

    <div class="form-group">
      <label>Email</label>
      <input type="email" id="email" placeholder="Your Email">
    </div>

    <div class="form-group">
      <label>Gender</label>
      <select id="gender">
        <option value="" selected>Select Gender</option>
        <option>Male</option>
        <option>Female</option>
        <option>Other</option>
      </select>
    </div>

    <div class="form-group">
      <label>Address</label>
      <textarea id="address" placeholder="Your Address"></textarea>
    </div>

    <div class="form-group">
      <label>Skills</label>
      <input type="text" id="skills" placeholder="e.g. HTML, CSS, JavaScript">
    </div>

    <!-- Aadhar Upload Preview -->
    <div class="form-group">
      <label>Aadhar Upload</label>
      <input type="file" id="aadharUpload" accept="image/*,application/pdf">
      <img id="aadhar-preview" />
    </div>

    <button type="submit">Save Profile</button>
  </form>
</div>

<script>
  // ---------- Profile Image Preview ----------
  const profileUpload = document.getElementById("profileUpload");
  const profileImage = document.getElementById("profileImage");

  profileUpload.addEventListener("change", function() {
    const file = this.files[0];
    if (file) {
      profileImage.src = URL.createObjectURL(file);
    }
  });

  // ---------- Aadhar Preview ----------
  const aadharUpload = document.getElementById("aadharUpload");
  const aadharPreview = document.getElementById("aadhar-preview");

  aadharUpload.addEventListener("change", function() {
    const file = this.files[0];
    if (!file) return;

    if (file.type.includes("image")) {
      aadharPreview.src = URL.createObjectURL(file);
      aadharPreview.style.display = "block";
    } else {
      aadharPreview.style.display = "none";
      alert("PDF Uploaded - Preview not supported here (will work in backend mode)");
    }
  });

  // ---------- Form Save (Frontend Only) ----------
  document.getElementById("profileForm").addEventListener("submit", function(e) {
    e.preventDefault();

    alert("âœ” Profile Saved Successfully (Frontend Only)\nBackend DB will be added later.");
  });
</script>

</body>
</html>
