<%- include("partials/navbar") %>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>User Profile | EduSetu</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <script src="https://cdn.tailwindcss.com"></script>
  <script defer src="https://unpkg.com/alpinejs@3.x.x/dist/cdn.min.js"></script>

  <style>
    body {
      font-family: "Poppins", sans-serif;
      background: linear-gradient(135deg, #4e54c8, #8f94fb);
      min-height: 100vh;
    }
  </style>
</head>
<body>

<div class="max-w-5xl mx-auto mt-28 mb-16 px-4" x-data="profileApp()">

  <!-- Header -->
  <div class="text-center mb-10">
    <h1 class="text-4xl font-bold text-white">User Profile</h1>
    <p class="text-white/80 mt-2">Manage your personal & professional information</p>
  </div>

  <!-- Card -->
  <div class="bg-white/90 backdrop-blur-xl rounded-2xl shadow-2xl p-8">

    <!-- Profile Picture -->
    <div class="flex flex-col items-center mb-8">
      <img :src="profilePreview" class="w-36 h-36 rounded-full object-cover border-4 border-indigo-500 shadow-lg" />
      <label class="mt-4 cursor-pointer text-indigo-600 font-medium">
        Change Photo
        <input type="file" accept="image/*" class="hidden" @change="previewProfile" />
      </label>
    </div>

    <!-- Form -->
    <form @submit.prevent="saveProfile" class="grid grid-cols-1 md:grid-cols-2 gap-6">

      <!-- Basic Info -->
      <div>
        <label class="font-semibold">Full Name</label>
        <input x-model="form.name" type="text" class="input" placeholder="Your full name" />
      </div>

      <div>
        <label class="font-semibold">Email</label>
        <input x-model="form.email" type="email" class="input" placeholder="your@email.com" />
      </div>

      <div>
        <label class="font-semibold">Mobile</label>
        <input x-model="form.mobile" type="text" class="input" placeholder="10-digit mobile number" />
      </div>

      <div>
        <label class="font-semibold">Gender</label>
        <select x-model="form.gender" class="input">
          <option value="">Select</option>
          <option>Male</option>
          <option>Female</option>
          <option>Other</option>
        </select>
      </div>

      <!-- Academic / Professional -->
      <div>
        <label class="font-semibold">College / Organization</label>
        <input x-model="form.college" type="text" class="input" placeholder="College or company name" />
      </div>

      <div>
        <label class="font-semibold">Current Role</label>
        <input x-model="form.role" type="text" class="input" placeholder="Student / Intern / Developer" />
      </div>

      <div class="md:col-span-2">
        <label class="font-semibold">Skills</label>
        <input x-model="form.skills" type="text" class="input" placeholder="HTML, CSS, JavaScript, Java, DSA" />
      </div>

      <div class="md:col-span-2">
        <label class="font-semibold">Bio</label>
        <textarea x-model="form.bio" rows="3" class="input" placeholder="Short introduction about yourself"></textarea>
      </div>

      <!-- Social Links -->
      <div>
        <label class="font-semibold">GitHub</label>
        <input x-model="form.github" type="url" class="input" placeholder="https://github.com/username" />
      </div>

      <div>
        <label class="font-semibold">LinkedIn</label>
        <input x-model="form.linkedin" type="url" class="input" placeholder="https://linkedin.com/in/username" />
      </div>

      <!-- Documents -->
       <div class="grid grid-cols-1 md:grid-cols-2 gap-6">

  <!-- Aadhar -->
  <div>
    <label class="font-semibold">Aadhar / ID Proof</label>
    <input type="file" @change="previewAadhar" class="mt-2" />
    <img x-show="aadharPreview" :src="aadharPreview"
         class="mt-4 rounded-lg max-h-48" />
  </div>

  <!-- ID Card -->
  <div>
    <label class="font-semibold">College ID Card</label>
    <input type="file" @change="previewIdCard" class="mt-2" />
    <img x-show="idCardPreview" :src="idCardPreview"
         class="mt-4 rounded-lg max-h-48" />
  </div>

</div>


      <!-- Buttons -->
      <div class="md:col-span-2 flex gap-4 mt-6">
        <button type="submit" class="flex-1 bg-indigo-600 hover:bg-indigo-700 text-white py-3 rounded-xl font-semibold transition">
          Save Profile
        </button>
        <button type="button" @click="resetForm" class="flex-1 bg-gray-200 hover:bg-gray-300 py-3 rounded-xl font-semibold">
          Reset
        </button>
      </div>

    </form>
  </div>
</div>

<!-- Tailwind input style -->
<style>
  .input {
    width: 100%;
    margin-top: 6px;
    padding: 12px 14px;
    border-radius: 12px;
    border: 1px solid #ddd;
    outline: none;
  }
  .input:focus {
    border-color: #6366f1;
    box-shadow: 0 0 0 2px rgba(99,102,241,0.2);
  }
</style>

<script>
function profileApp() {
  return {
    profilePreview: 'https://via.placeholder.com/150',
    aadharPreview: null,
    idCardPreview: null,
    form: {
      name: '', email: '', mobile: '', gender: '',
      college: '', role: '', skills: '', bio: '',
      github: '', linkedin: ''
    },

    previewProfile(e) {
      const file = e.target.files[0];
      if (file) this.profilePreview = URL.createObjectURL(file);
    },
    previewIdCard(e) {
  const file = e.target.files[0];
  if (file && file.type.includes('image')) {
    this.idCardPreview = URL.createObjectURL(file);
  }
},
    previewAadhar(e) {
      const file = e.target.files[0];
      if (file && file.type.includes('image')) {
        this.aadharPreview = URL.createObjectURL(file);
      } else {
        alert('PDF stored. Preview available after backend integration.');
      }
    },

    saveProfile() {
      localStorage.setItem('userProfile', JSON.stringify(this.form));
      alert('✔ Profile saved (Frontend – LocalStorage)');
    },

    resetForm() {
      localStorage.removeItem('userProfile');
      location.reload();
    }
  }
}
</script>

</body>
</html>
