<style>
  /* NAVBAR MAIN */
  .navbar {
    width: 100%;
    padding: 15px 40px;
    background: #ffffff;
    border-bottom: 1px solid #e5e5e5;
    display: flex;
    justify-content: space-between;
    align-items: center;
    position: fixed; 
    top: 0;
    left: 0;
    z-index: 999;
  }

  /* LEFT MENU BUTTONS */
  .nav-left a button {
    padding: 10px 20px;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 6px;
    margin-right: 15px;
    font-size: 14px;
    font-weight: 600;
    cursor: pointer;
    transition: 0.3s;
  }

  .nav-left a button:hover {
    background: #0056d2;
  }

  .nav-left a {
    text-decoration: none;
  }

  /* USER MENU */
  .user-menu {
    display: flex;
    align-items: center;
    cursor: pointer;
    position: relative;
    padding-right: 60px; /* dropdown ko right corner se chipakne se roke */
}


  .user-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: url('https://cdn-icons-png.flaticon.com/512/149/149071.png');
    background-size: cover;
    background-position: center;
    border: 2px solid #007bff;
  }

  /* DROPDOWN */
  .dropdown {
    display: none;
    position: absolute;
    right: 0;
    top: 50px;
    background: #fff;
    border: 1px solid #ddd;
    width: 160px;
    padding: 10px 0;
    border-radius: 8px;
    box-shadow: 0px 4px 10px rgba(0,0,0,0.1);
    z-index: 1000;
  }

  .dropdown a {
    display: block;
    padding: 12px 15px;
    color: #333;
    text-decoration: none;
    font-size: 14px;
  }

  .dropdown a:hover {
    background: #f2f2f2;
  }

  @media(max-width: 500px) {
    .nav-left a button {
      padding: 8px 14px;
      margin-right: 10px;
      font-size: 12px;
    }
    .navbar {
      padding: 10px 20px;
    }
  }
</style>

<nav class="navbar">
  
  <!-- LEFT SIDE BUTTON MENU -->
  <div class="nav-left">
    <a href="/"><button>Home</button></a>
    <a href="/login"><button>Login</button></a>
    <a href="/signup"><button>Signup</button></a>
  </div>

  <!-- RIGHT SIDE USER MENU -->
  <div class="user-menu" onclick="toggleDropdown()">
    <div class="user-avatar"></div>

    <div class="dropdown" id="dropdownMenu">
      <a href="/profile">Profile</a>
      <a href="/settings">Settings</a>
      <a href="/logout">Logout</a>
    </div>
  </div>

</nav>

<script>
  function toggleDropdown() {
    const menu = document.getElementById("dropdownMenu");
    menu.style.display = menu.style.display === "block" ? "none" : "block";
  }

  document.addEventListener("click", function (e) {
    const user = document.querySelector(".user-menu");
    const drop = document.getElementById("dropdownMenu");

    if (!user.contains(e.target)) {
      drop.style.display = "none";
    }
  });
</script>
