<%- include("partials/navbar") %>

<style>
  /* Container & Heading */
  .container {
    max-width: 1200px;
    margin: auto;
    margin-top: 50px;
    padding: 20px;
  }

  h2 {
    text-align: center;
    margin-bottom: 20px;
    font-size: 2rem;
    color: #333;
  }

  /* Search / Filter Input */
  .filter-container {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
  }

  #filterInput {
    width: 300px;
    padding: 10px 15px;
    border-radius: 25px;
    border: 1px solid #ccc;
    outline: none;
    font-size: 1rem;
    transition: all 0.3s;
  }

  #filterInput:focus {
    border-color: #007bff;
    box-shadow: 0 0 5px rgba(0,123,255,0.5);
  }

  /* Cards Grid */
  .cards-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 20px;
  }

  /* Card */
  .card {
    padding: 20px;
    background: linear-gradient(145deg, #f0f0f0, #ffffff);
    border-radius: 16px;
    box-shadow: 0 6px 15px rgba(0,0,0,0.1);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  .card:hover {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 0 12px 25px rgba(0,0,0,0.15);
  }

  .card h3 {
    font-size: 1.3rem;
    color: #333;
    margin-bottom: 10px;
  }

  .card p {
    font-size: 0.95rem;
    color: #555;
    flex-grow: 1;
  }

  .card a {
    margin-top: 15px;
    text-decoration: none;
    font-weight: bold;
    color: #fff;
    background: #007bff;
    text-align: center;
    padding: 10px;
    border-radius: 8px;
    transition: all 0.3s;
  }

  .card a:hover {
    background: #0056b3;
  }

  @media(max-width: 500px){
    #filterInput {
      width: 90%;
    }
  }
</style>

<div class="container">
  <h2>ðŸ”¥ Live Opportunities </h2>

  <div class="filter-container">
    <input type="text" id="filterInput" placeholder="Search by title or description...">
  </div>

  <div id="cards" class="cards-grid"></div>
</div>

<script>
  let allData = [];

  async function loadData() {
    try {
      const res = await fetch("/opportunities/static");
      allData = await res.json();
      renderCards(allData);
    } catch (err) {
      console.error("Error loading data:", err);
      document.getElementById("cards").innerHTML = "<p style='color:red;text-align:center;'>Failed to load opportunities</p>";
    }
  }

  function renderCards(data) {
    let html = "";
    if(data.length === 0){
      html = "<p style='text-align:center;'>No opportunities found</p>";
    } else {
      data.forEach(item => {
        html += `
          <div class="card">
            <h3>${item.title}</h3>
            <p>${item.description}</p>
            <a href="${item.link}" target="_blank">View â†’</a>
          </div>
        `;
      });
    }
    document.getElementById("cards").innerHTML = html;
  }

  // Filter functionality
  document.getElementById("filterInput").addEventListener("input", (e) => {
    const searchTerm = e.target.value.toLowerCase();
    const filtered = allData.filter(item => 
      item.title.toLowerCase().includes(searchTerm) || 
      item.description.toLowerCase().includes(searchTerm)
    );
    renderCards(filtered);
  });

  loadData();
</script>
